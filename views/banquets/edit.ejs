<%- include('../partials/header'); -%>
<div class="container">
    <div >
        <h1 style="text-align:center;">Edit <%= banquet.name %></h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/banquets/<%= banquet.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type = "text" name ="banquet[name]"  value = "<%= banquet.name %>">
                </div>
                <!-- <div class="form-group">
                    <input class="form-control" type = "number" name ="banquet[price]"  value="<%=banquet.price %>" min="0.01" step="0.01">
                </div> -->
                <div class="form-group">
                    <input class="form-control" type = "text" name ="banquet[image]" value = "<%= banquet.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" name ="banquet[description]" value = "<%= banquet.description %>">
                </div>
                 <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit</button>
                 </div>
            </form>
            <a href="/banquets">Go back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer'); -%>


